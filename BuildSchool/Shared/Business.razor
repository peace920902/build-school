<div class="container mt-5">
    <div class="row">
        @foreach (var path in ImagePath)
        {
            <div class="col-6 col-md-4 col-lg-3 mb-5 text-center">
                <img src="@path" alt="">
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public IEnumerable<string> ImagePath { get; set; }

}